<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#F0CECE"
tools:context=".MainActivity">

<Button
android:id="@+id/factorial"
android:layout_width="83dp"
android:layout_height="54dp"
android:backgroundTint="#48C2FA"
android:text="x!"
android:textColor="#FFFFFF"
android:textSize="16sp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.341"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/textView"
app:layout_constraintVertical_bias="0.461" />
<EditText
android:id="@+id/editTextText2"
android:layout_width="227dp"
android:layout_height="50dp"
android:backgroundTint="#211F1F"
android:ems="10"
android:foregroundTint="#FFFFFF"
android:hint="result"

android:inputType="text"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.554"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/factorial"
app:layout_constraintVertical_bias="0.124" />
<TextView
android:id="@+id/textView"
android:layout_width="135dp"
android:layout_height="32dp"
android:layout_marginTop="28dp"
android:text="Calculator"
android:textColor="#090303"
android:textSize="24sp"
android:textStyle="bold"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent" />

<Button
android:id="@+id/log"
android:layout_width="83dp"
android:layout_height="54dp"
android:backgroundTint="#48C2FA"
android:text="loge"
android:textColor="#FFFFFF"
android:textSize="16sp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.048"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/editTextNumberDecimal"
app:layout_constraintVertical_bias="0.278" />
<Button
android:id="@+id/sqrt"
android:layout_width="83dp"
android:layout_height="54dp"
android:backgroundTint="#48C2FA"

android:text="sqrt"
android:textColor="#FFFFFF"
android:textSize="16sp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.951"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/editTextNumberDecimal"
app:layout_constraintVertical_bias="0.278" />
<Button
android:id="@+id/sq"
android:layout_width="83dp"
android:layout_height="54dp"
android:backgroundTint="#48C2FA"
android:text="x^2"
android:textColor="#FFFFFF"
android:textSize="16sp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.64"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/editTextNumberDecimal"
app:layout_constraintVertical_bias="0.278" />
<Button
android:id="@+id/multiply"
android:layout_width="80dp"
android:layout_height="55dp"
android:backgroundTint="#48C2FA"
android:text="*"
android:textSize="16sp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.138"
app:layout_constraintStart_toEndOf="@+id/sub"
app:layout_constraintTop_toBottomOf="@+id/editTextNumberDecimal"
app:layout_constraintVertical_bias="0.112" />
<Button
android:id="@+id/divide"
android:layout_width="78dp"

android:layout_height="55dp"
android:layout_marginStart="18dp"
android:backgroundTint="#48C2FA"
android:text="/"
android:textSize="20sp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.272"
app:layout_constraintStart_toEndOf="@+id/multiply"
app:layout_constraintTop_toBottomOf="@+id/editTextNumberDecimal"
app:layout_constraintVertical_bias="0.112" />
<Button
android:id="@+id/sub"
android:layout_width="79dp"
android:layout_height="55dp"
android:backgroundTint="#48C2FA"
android:text="-"
android:textSize="24sp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.068"
app:layout_constraintStart_toEndOf="@+id/add"
app:layout_constraintTop_toBottomOf="@+id/editTextNumberDecimal"
app:layout_constraintVertical_bias="0.112" />
<EditText
android:id="@+id/editTextNumberDecimal"
android:layout_width="138dp"
android:layout_height="47dp"
android:ems="10"
android:hint="enter number 2"
android:inputType="numberDecimal"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.498"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintVertical_bias="0.247" />
<Button
android:id="@+id/button"

android:layout_width="89dp"
android:layout_height="44dp"
android:background="#EF7676"
android:backgroundTint="#4EC2F6"
android:text="Num2"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.049"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintVertical_bias="0.25" />
<Button
android:id="@+id/buttonnum"
android:layout_width="87dp"
android:layout_height="40dp"
android:background="#3CC2FF"
android:backgroundTint="#A0E2FF"
android:text="Num1"
app:cornerRadius="100dp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.049"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintVertical_bias="0.143" />
<EditText
android:id="@+id/editTextNumberDecimal1"
android:layout_width="138dp"
android:layout_height="47dp"
android:ems="10"
android:hint="enter number 1"
android:inputType="numberDecimal"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.498"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintVertical_bias="0.144" />
<Button

android:id="@+id/add"
android:layout_width="83dp"
android:layout_height="54dp"
android:backgroundTint="#48C2FA"
android:text="+"
android:textColor="#FFFFFF"
android:textSize="16sp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.048"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/editTextNumberDecimal"
app:layout_constraintVertical_bias="0.115" />

</androidx.constraintlayout.widget.ConstraintLayout>